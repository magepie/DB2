<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="de.dis2013.data.PurchaseContract" table="purchasecontract">
        <id name="id" column="id">
            <generator class="foreign">
                <param name="property">contract</param>
            </generator>
        </id>
        <one-to-one name="contract" class="de.dis2013.data.Contract" constrained="true"></one-to-one>
        <property name="numberofinstallments" type="int" column="numberofinstallments" />
        <property name="interestrate" type="double" column="interestrate" />
    </class>
</hibernate-mapping>